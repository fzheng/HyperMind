# hlbot environment example

# App
PORT=3000
POLL_INTERVAL_MS=90000

# Choose storage backend: memory | redis | postgres
STORAGE_BACKEND=postgres

# Postgres
POSTGRES_USER=hlbot
POSTGRES_PASSWORD=hlbotpassword
POSTGRES_DB=hlbot
PG_PORT=5432
# Used by app to connect to Postgres in docker-compose
DATABASE_URL=postgresql://hlbot:hlbotpassword@db:5432/hlbot

# Redis (optional)
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# App port mapping for compose
APP_PORT=3000

# Optional: cleanup + backfill latest trades on server start
BACKFILL_ON_START=false
INTEGRITY_CHECK_ENABLED=true
INTEGRITY_CHECK_INTERVAL_MS=900000
